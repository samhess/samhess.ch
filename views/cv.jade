    style.
        table {
            font-size: medium;
            width: 100%;
        }

        tbody {
            border: none;
        }
        tr th {
            text-align: left;
        }

        td {
            vertical-align: top;
        }

        td.colon::after {
            content: ":";
        }

        tbody th, tbody td {
            padding: 0.2rem 0.2rem 0.2rem 0.0rem
        }

        tr th.first1 {
            width: 20%;
        }
        tr th.first {
            width: 28%;
        }
        td p {
            margin: 0;
        }
        tbody tr:nth-child(even) {
            background-color: white;
        }

        @page {
            size: A4;
        }

        .page {
        }

        @media print {
            html, body {
                width: 210mm;
                height: 297mm;
                /* border: 1px solid grey;*/
            }

            .row {page-break-inside: avoid;}

            hr, footer, .top-bar {
                display: none;
            }

            .row {
                /* border: 1px solid red; */
                padding: 0;
            }

            a[href]:after {
                content: none !important;
            }
        }

